<nav class="nav">
         <button id="clear" onclick="window.location.href='/clear'">Re-Scrape</button>
         <button id="scrape" onclick="window.location.href='/scrapah'">Scrape</button>
</nav>
<div id="wrapper">
    <h1>Wow Reddit Scraper</h1>

    <div id="articles">
        {{#each items}}
       
        <div class="artticle">{{title}}<br>
            <a target="_blank" href="https://old.reddit.com{{link}}">View Article</a> {{amount}}<br>
            <button class="addNote myBtn" data-id="{{_id}}">Add Note</button><button class="viewNote" data-id="{{_id}}">View
                Notes</button>
        </div>


        {{/each}}
    </div>
    <div id="notes"></div>
</div>

<div id="myModal" class="modal">
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Add a Note</p>
        <input id="notetitle" type="text">
        <br>
        <textarea id="notetext" type="text"></textarea>
        <br>
        <button id="submit" data-id="{{_id}}">Submit</button>
    </div>

</div>

<div id="editModal" class="modal">
    <div class="modal-content">
        <span id="editspan" class="close">&times;</span>
        <p>Edit Note</p>
        <input id="edittitle" type="text">
        <br>
        <textarea id="edittext" type="text"></textarea>
        <br>
        <button id="save">Save</button>
    </div>

</div>